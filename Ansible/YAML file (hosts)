 - orange
 - lemon
 - strawberry




#dictionary

employee:
  name: hamid
  family: hosseinzadeh
  job: networker







employees:
  - hamid hosseinzadeh:
    age: 30
    married: no
    skills:
     - skill-1: 
        experience: yes
        knowledge: yes

     - skill-2: 
        experience: yes
        knowledge: yes

     
  - ali daei:
    age: 50
    married: yes
    skills:
     - skill-1: 
        experience: no
        knowledge: yes

     - skill-2: 
        experience: yes
        knowledge: no






#variable:

name:
  user: "{{username}}"
  pass: "{{password}}"
  uname: "{{username}} sdhfk ksadjfhkasjd fkjasdhf"
  randomkey: "asdfjh asdlfk asdkljf a"












all:
    children:
        routers:
            hosts:
                r1:
                    ansible_host: 127.0.0.1

                r2:
                    ansible_host: 127.0.0.1

            vars:
                ansible_connection: network_cli
                ansible_network_os: ios

        servers:
            hosts:
                centos:
                    ansible_host: 127.0.0.1






